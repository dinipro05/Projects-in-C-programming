#include<stdio.h>
int main ()
{
	float vize,final,ort,devam;
	printf("Vize sinav sonucunu giriniz");
	scanf("%f",&vize);
	printf("Final sinav sonucu giriniz");
	scanf("%f",&final);
	printf("Devamsizligi giriniz");
	scanf("%f",&devam);
	ort=vize*0.4+final*0.6;
	if(devam<4)
	{
		if(ort>50)
		     printf("Sinavi basariyla gectiniz");
		else
		     printf("Sinavi basariyla gecemediniz");
	}
    else if(devam>4)
    {
    	  printf("Devamsizliktan kaldiniz");
	}
	
	return 0;
}
